 find -type d -name "*-mask.tag-anat.tag-*" -print0 |
  while IFS= read filename
  do
    cd ${filename}
    prefix=${filename%.*}
    suffix=$(
        awk '
            match($0,/Sem|Plaus|Gram/) {
                print tolower(substr($0,RSTART,RLENGTH))
                exit
            }
        ' "_info.json"
    )
    mv mask.nii.gz mask_anat_$suffix.nii.gz 
    done
   
  
