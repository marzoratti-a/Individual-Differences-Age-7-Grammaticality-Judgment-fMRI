 if [ ! -d maskcombo ]; then
  	mkdir maskcombo
 fi
 if [ ! -f anat.txt ]; then
    ls | grep ^dt-neuro-mask.tag-anat.tag- > anat.txt
 fi
  
  for anat_folder in `anat.txt`; do
    cd ${anat_folder}
    suffix=$(
        awk '
            match($0,/Sem|Plaus|Gram/) {
                print tolower(substr($0,RSTART,RLENGTH))
                exit
            }
        ' "_info.json"
    )
    echo $suffix
    cp "mask.nii.gz" ../../maskcombo/"mask_anat_$suffix.nii.gz" 
   done
